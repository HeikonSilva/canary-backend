generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String               @id @default(cuid())
  name            String               @unique
  displayName     String
  passwordHash    String
  securityAnswers UserSecurityAnswer[]
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt

  // friends      User[]   @relation("UserFriends", references: [id])
  // friendRequests User[] @relation("UserFriendRequests", references: [id])
  // messages     Message[]
  // conversations Conversation[]
  // displayName String?
  // profilePicture String?
  // bio String?
}

model SecurityQuestion {
  id       Int    @id @default(autoincrement())
  question String @unique

  userAnswers UserSecurityAnswer[]
}

model UserSecurityAnswer {
  id         Int    @id @default(autoincrement())
  userId     String
  questionId Int
  answerHash String

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  question SecurityQuestion @relation(fields: [questionId], references: [id])

  @@unique([userId, questionId])
}
